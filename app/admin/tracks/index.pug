							.track-cell.track_brief 
								.track-name
									.track-name__play
										.btn-play
											img(src="/img/icons/play_arrow-24px.svg")
									.track-name__track
										.song
											b Lost Boy 
											| - Jaden Smith
										.label-album SYRE
										a.download-song(href="#")
											span
											| Скачать
							.track-cell.track_status
								.track-status.track-status_on-check
									div Новый
							.track-cell.track_fio Алиев Эдвард Эдуардович
							.track-cell.track_actions
