				.tracks.tracks_admin

					.track(
						data-links_yandexMusic="https://music.yandex.ru/album/7065596",
						data-links_appleMusic="https://music.apple.com/ru/album/artefact-single/1455290124",
						data-links_iTunes="https://music.apple.com/ru/album/artefact-single/1455290124",
						data-links_spotify="https://open.spotify.com/artist/5y7Ur6PtmtDegVpTOCD5xN",
						data-links_googlePlay="https://play.google.com/store/music/album/%D0%AD%D0%BB%D1%8D%D0%BC_ARTIFACT?id=B7ravbovkdn67aipzaahgarbpoa",
						data-name_track="Хуйня",
						data-author_text="Долбаеб Ебаный",
						data-author_music="Алиев Эдвард",
